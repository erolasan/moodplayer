<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="erolasan.moodplayer.quiz.GenresFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick your preferred music type"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginBottom="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap once on your favourite genres"
        android:textColor="#ccc"
        android:layout_gravity="center"
        android:layout_marginBottom="225dp"/>

    <com.adroitandroid.chipcloud.ChipCloud
        xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chip_cloud"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        chipcloud:deselectedColor="@color/colorPrimary"
        chipcloud:deselectedFontColor="#222"
        chipcloud:selectedColor="@color/orange"
        chipcloud:selectedFontColor="@color/colorPrimary"
        chipcloud:deselectTransitionMS="150"
        chipcloud:selectTransitionMS="350"
        chipcloud:selectMode="multi"
        chipcloud:allCaps="true"
        chipcloud:gravity="staggered"
        chipcloud:minHorizontalSpacing="16dp"
        chipcloud:verticalSpacing="12dp"
        chipcloud:textSize="16sp"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Next"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="225dp"
        android:textColor="@color/colorPrimary"/>
</FrameLayout>
