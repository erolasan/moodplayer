<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#aa2B2C5A"/>
            <size
                android:width="260dp"
                android:height="130dp" />
            <corners
                android:bottomLeftRadius="135dp"
                android:bottomRightRadius="130dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/orange"/>
            <size
                android:width="20dp"
                android:height="130dp" />
            <corners
                android:bottomLeftRadius="130dp"
                android:bottomRightRadius="135dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/purple"
                android:startColor="#bb2B2C5A"
                android:type="linear"/>
            <size
                android:width="250dp"
                android:height="125dp" />
            <corners
                android:bottomLeftRadius="140dp"
                android:bottomRightRadius="140dp" />
        </shape>
    </item>
</layer-list>